<Project Sdk="Microsoft.NET.Sdk" ToolsVersion="15.0">

  <Import Project="..\..\build\common.props" />

  <PropertyGroup>
    <TargetFrameworks>netcoreapp1.0;net451</TargetFrameworks>
    <Description>Entity Framework Core Command Line Tools</Description>
    <!-- required to make restore and VS happy. See https://github.com/dotnet/sdk/issues/396 -->
    <RuntimeIdentifier Condition="'$(TargetFramework)'!='netcoreapp1.0'">win7-x64</RuntimeIdentifier>
    <Platform Condition="'$(TargetFramework)'=='net451' AND '$(Platform)'==''">AnyCPU</Platform>
    <OutputType>exe</OutputType>
    <AssemblyName>ef</AssemblyName>
    <AssemblyName Condition="'$(Platform)'=='x86'">ef.x86</AssemblyName>
    <IsPackable>false</IsPackable>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="**\*.cs" />
    <EmbeddedResource Include="**\*.cs" />

  </ItemGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'netcoreapp1.0' ">
    <PackageReference Include="Microsoft.NETCore.App" Version="1.0.0" />
  </ItemGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'net451' ">
    <Reference Include="System" />
    <Reference Include="Microsoft.CSharp" />
  </ItemGroup>

</Project>
